<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/nombreTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:background="#2471A3"
        android:fontFamily="Verdana"
        android:text="Nueva nota"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/esri_white"
        android:textStyle="normal|bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Verdana"
        android:textColor="#2471A3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_titulo"
        android:text="titulo..." />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_titulo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:fontFamily="Verdana"
        android:id="@+id/txt_nota"
        android:textColor="#2471A3"
        android:text="nota..." />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"

        android:id="@+id/box_nota"
        android:layout_weight="0.22" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:id="@+id/btn_guardar_nota"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>