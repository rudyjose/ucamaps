<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favoritos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombreTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:background="#2471A3"
        android:fontFamily="Verdana"
        android:text="InformaciÃ³n Edificio"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/esri_white"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_above="@+id/nombreEdificio"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/imgedificio"
        android:src="@drawable/ic_lista2" />

    <TextView
        android:id="@+id/nombreEdificio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-221dp"
        android:hint="@string/hint"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2471A3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:hint="@string/hint"
        android:inputType="textMultiLine" />

</RelativeLayout>