<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titulo_edificio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:background="@color/fondo_barra_titulo"
                android:capitalize="words"
                android:elegantTextHeight="false"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/esri_white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="320dp"
                android:layout_height="255dp"
                android:id="@+id/foto_edificio"
                android:textAlignment="center"
                android:foregroundGravity="fill_horizontal|fill_vertical"
                android:layout_gravity="center|bottom|left|right|top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:id="@+id/info_edificio"
                android:maxLength="100"
                android:textStyle="normal"
                android:textAlignment="viewEnd"
                android:singleLine="false"
                android:textSize="18sp"
                android:textColor="#000000" />



        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/see_more_button"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_signin_btn_light_text_pressed"
        android:clickable="true"
        android:enabled="true"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:text="Ver MÃ¡s[+]"
        android:textAlignment="center"
        android:textColor="@color/fuente_app_blue"
        android:textSize="25dp"
        android:textStyle="normal|bold" />

</LinearLayout>